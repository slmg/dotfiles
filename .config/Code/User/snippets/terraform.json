{
	// Place your snippets for terraform here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Module main.tf header": {
		"prefix": "tfh",
		"body": [
			"/**",
			"* # ${1:Main title}",
			"*",
			"* ${2:General module summary}",
			"*/",
		],
		"description": "Header parsed by terraform-docs and then inserted at the top of README.md."
	},
	"variables.tf separator": {
		"prefix": "varr",
		"body": [
			"# -----------------------------------------------------------------------------",
			"# REQUIRED PARAMETERS",
			"# You must provide a value for each of these parameters.",
			"# -----------------------------------------------------------------------------\n",
			"${0}\n",
			"# -----------------------------------------------------------------------------",
			"# OPTIONAL PARAMETERS",
			"# These parameters have reasonable defaults.",
			"# -----------------------------------------------------------------------------\n",
		],
		"description": "Comment separator to logically distinguish required and optional variables."
	}
}
